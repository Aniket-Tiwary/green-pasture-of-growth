{
  "name": "green-pasture-of-growth",
  "version": "1.0.0",
  "description": "A calming, supportive single-page web app with Studio Ghibli-inspired aesthetics",
  "scripts": {
    "build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "dev": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "tailwindcss": "^3.4.0"
  }
}
